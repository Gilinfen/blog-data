{
  "name": "blog-data",
  "version": "1.0.0",
  "workspaces": [
    "web/*"
  ],
  "scripts": {
    "start": "ts-node --project ./tsconfig.base.json ./scripts/start",
    "dev": "cd ./web && pnpm dev",
    "node": "nodemon ./server",
    "build": "cd ./web && pnpm build",
    "dor": "docker buildx build --platform linux/amd64 -t registry.cn-shanghai.aliyuncs.com/glinfen/glinfen-blog-data . --load",
    "dor:push": "docker push registry.cn-shanghai.aliyuncs.com/glinfen/glinfen-blog-data",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "prepare": "husky install",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@ant-design/icons": "^5.1.4",
    "@dnd-kit/core": "^6.0.8",
    "@dnd-kit/modifiers": "^6.0.1",
    "@dnd-kit/sortable": "^7.0.2",
    "@dnd-kit/utilities": "^3.2.1",
    "antd": "^5.6.2",
    "nanoid": "^4.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sass": "^1.63.4",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@types/cross-spawn": "^6.0.2",
    "@types/node": "^20.3.1",
    "@types/react": "^18.0.37",
    "@types/react-dom": "^18.0.11",
    "@types/uuid": "^9.0.2",
    "@types/ws": "^8.5.5",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "@vitejs/plugin-react": "^4.0.0",
    "cross-env": "^7.0.3",
    "cross-spawn": "^7.0.3",
    "dayjs": "^1.11.9",
    "dotenv": "^16.3.1",
    "eslint": "^8.38.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.3.4",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "nodemon": "^2.0.22",
    "prettier": "latest",
    "typescript": "^5.0.2",
    "vite": "^4.3.9",
    "ws": "^8.13.0"
  },
  "lint-staged": {
    "*": [
      "prettier --write --cache --ignore-unknown"
    ]
  }
}
